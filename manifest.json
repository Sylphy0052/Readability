{
  "manifest_version": 3,
  "name": "AI Markdown Crawler",
  "version": "1.0.0",
  "description": "Crawl websites and convert into a single Markdown file using Gemini Nano.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "aiLanguageModelOriginTrial",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/readability.js", "lib/turndown.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
